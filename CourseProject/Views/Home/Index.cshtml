@model CourseProject.ViewModels.HomePageViewModel;
@{
    ViewData["Title"] = "Home Page";
}


<!-- home-slider start -->
<section class="slider-content">
    <div class="home-slider swiper" id="home-slider">
        <div class="swiper-wrapper">
   

            @foreach (var item in Model.Carousel)
            {
                var modifiedUrl = item.CarouselUrl.Replace("mobile-", "");

                <div class="swiper-slide">
                    <div class="slide-image">
                        <img src="@modifiedUrl" class="img-fluid desk-img" alt="backery-slider-01">
                        <img src="@item.CarouselUrl" class="img-fluid mobile-img" alt="mobile-slider-01" >
                        <div class="container slider-info-content">
                            <div class="row">
                                <div class="col">
                                    <div class="slider-text-info slider-content-center slider-text-center">
                                        <div class="slider-info-wrap">
                                            <span class="slider-lable e2">
                                                <span class="slider-lable_title" style="color:#ffffff;">@item.Title</span>

                                            </span>
                                            <h2 class="e1">
                                                @*    <span>Size özel</span>
                                            <span>form</span> *@
                                                <span>@item.Description</span>
                                            </h2>
                                            <div class="slider-custom-text e1">
                                                <span class="custom-text-1">@item.Price @item.Qnit </span>

                                            </div>
                                            <a href="/Home/CollectionList?CategoryType=1" class="btn btn-style e1">Koleksiyona göz at.</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }



   
        </div>
        <div class="swiper-buttons">
            <button class="swiper-prev"><i class=" feather-arrow-left"></i></button>
            <button class="swiper-next"><i class=" feather-arrow-right"></i></button>
        </div>
        <div class="swiper-dots">
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>
<!-- home-slider end -->
<!-- slider-category start -->
<section class="slider-category section-pt">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="section-capture">
                    <div class="section-title">
                        <h2>Kategori</h2>
                    </div>
                </div>
                <div class="category-block">
                    <div class="swiper" id="category-template">
                        <div class="swiper-wrapper">
                            @foreach (var categoryitem in Model.Category)
                            {
                                int catType = 0;
                                if (categoryitem.Status == 1)
                                {
                                    catType = 1;
                                }
                                else
                                {
                                    catType = 2;
                                }

                            <div class="swiper-slide">
                                <div class="category-item">

                                        <a asp-controller="Home" asp-action="CollectionList" asp-route-CategoryType="@catType" class="icon-block">
                                        <div class="category-text">
                                           
                                            <div class="title-block">
                                                <span class="cat-title">@categoryitem.CategoryName</span>
                                            </div>
                                        </div>
                                        <div class="cat-image">
                                            <span class="cat-img">
                                                    <img src="@categoryitem.CategoryUrl" class="img-fluid" alt="cat-01">
                                            </span>
                                        </div>
                                            <div class="category-button" style="margin-left:24%">
                                                <a asp-controller="Home" asp-action="CollectionList" asp-route-CategoryType="@catType" class="icon-block">
                                                    <span class="button-title" >ŞİMDİ SATIN AL</span>
                                                    <span class="button-block"><i class="feather-arrow-right"></i></span>
                                                </a>
                                            
                                        </div>
                                    </a>
                                </div>
                            </div>
                            }
                        </div>
                        <div class="swiper-dots">
                            <div class="swiper-pagination"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- slider-category end -->

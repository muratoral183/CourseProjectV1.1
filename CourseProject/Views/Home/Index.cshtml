<!-- product start -->
<section class="special-category collection-category-template section-ptb">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="collection-category">
                    <div class="section-capture">
                        <div class="section-title">
                            <h2><span>Öne çıkan ürünler</span></h2>
                        </div>
                    </div>
                    <div class="collection-wrap">
                        <div class="collection-slider swiper" id="pro-template">
                            <div class="swiper-wrapper">

                                @if (Model.Product != null)
                                {
                                    double? oldPrice = 0.0;

                                @foreach (var productItem in Model.Product)
                                {

                                        int catType = 0;
                                        if (productItem.IsProductType == 1)
                                        {
                                            catType = 1;
                                        }
                                        else
                                        {
                                            catType = 2;
                                        }
                                        oldPrice = productItem.Price + (productItem.Price * 10 / 100);
                                        <div class="swiper-slide">
                                        <!-- product start -->
                                        <div class="single-product-wrap">
                                            <!-- product-img start -->
                                            <div class="product-image">
                                                    <a asp-controller="Home" asp-action="CollectionList" asp-route-CategoryType="@catType" class="pro-img">
                                                    <img src="@productItem.ProductUrl" class="img-fluid img1" alt="packging-pro-01.jpg">
                                          
                                                </a>
                                                <!-- product-action start -->
                                                <div class="product-action">
                                                        <a asp-controller="Home" asp-action="CollectionList" asp-route-CategoryType="@catType" class="wishlist-product">
                                                        <span class="wishlist-icon"><i class="feather-heart"></i></span>
                                                    </a>
                                                </div>
                                                <div class="product-add-cart-action">
                                                    <div class="product-action">

                                                            <a asp-controller="Home" asp-action="CollectionList" asp-route-CategoryType="@catType" class="quick-view"
                                                           data-bs-target="#quickview">
                                                            <span class="quickview-title">Sayfaya Git</span>
                                                        </a>
                                                    </div>
                                                </div>
                                                <!-- product-action end -->
                                            </div>
                                            <!-- product-img end -->
                                            <!-- product-content start -->
                                            <div class="product-content">
                                                <!-- product-title start -->
                                                <h6><a href="~/webside/product-template2.html">@productItem.Name</a></h6>
                                                <!-- product-title end -->
                                                <!-- product-price start -->
                                                <div class="price-box">
                                                    <span class="new-price">@productItem.Qunit @productItem.Price</span>
                                                        <span class="old-price">@productItem.Qunit @oldPrice</span>
                                                </div>
                                                <!-- product-price end -->
                                                <!-- product-action start -->
                                                <div class="product-action">
                                                    <a href="~/webside/wishlist-product.html" class="wishlist-product">
                                                        <span class="wishlist-icon"><i class="feather-heart"></i></span>
                                                    </a>
                                                    <a href="~/webside/javascript:void(0)" class="add-to-cart">
                                                        <span class="cart-icon"><i class="feather-shopping-bag"></i></span>
                                                    </a>
                                                    <a href="~/webside/#quickview" class="quick-view" data-bs-toggle="modal" data-bs-target="#quickview">
                                                        <span class="quickview-icon"><i class="feather-eye"></i></span>
                                                    </a>
                                                </div>
                                                <!-- product-action end -->
                                            </div>
                                            <!-- product-content end -->
                                        </div>
                                        <!-- product end -->
                                    </div>
                                 }
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product end -->

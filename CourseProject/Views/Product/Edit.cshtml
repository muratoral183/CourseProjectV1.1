@model CourseProject.DAL.Entity.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <img src="@Model.ProductUrl" class="img-fluid" alt="Responsive image">
            <br /><br /><br /><br />
            <div class="form-group">
                <label asp-for="ProductUrl" class="control-label"></label>
                <input asp-for="ProductUrl" class="form-control" />
                <span asp-validation-for="ProductUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label">Seçim yapınız</label>
                <input asp-for="File" class="form-control" />

                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qunit" class="control-label"></label>
                <input asp-for="Qunit" class="form-control" />
                <span asp-validation-for="Qunit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">

                    <input asp-for="IsStandOut" class="form-check-inpu" type="checkbox" />
                    <label asp-for="IsStandOut" class="control-label">Öne çıkar</label>
                    <span asp-validation-for="IsStandOut" class="text-danger"></span>

                </div>
                <span asp-validation-for="IsStandOut" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsProductType" class="control-label"></label>
                <select asp-for="IsProductType" class="form-control" asp-items="ViewBag.ProductTypes">
                </select>
                <span asp-validation-for="IsProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
